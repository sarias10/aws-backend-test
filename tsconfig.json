// Configuración de TypeScript
{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./build/",
    "rootDir": "./src",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true, // Hace que sea obligatorio que todos los paths de una función devuelvan un valor
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true                          /* Skip type checking all .d.ts files. */
  },
  "include": ["src"],                  
  "exclude": ["node_modules", "build"]
}